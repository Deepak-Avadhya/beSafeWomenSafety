<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"












    tools:context="com.deepakavadhya.www.myapplication.MainActivity">


    <Button
        android:text="call your friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sendContactButton"
        android:layout_below="@+id/panicButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="10sp"/>

    <Button
        android:text="Book cab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cabButton"

        android:onClick="callCab"
        android:layout_below="@+id/sendContactButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="10sp"/>

    <Button
        android:text="call ambulance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ambulanceButton"
        android:onClick="callAmbulance"
        android:layout_below="@+id/cabButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="10sp"/>

    <Button
        android:text="Show safe path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showPathButton"
        android:onClick="showPath"
        android:layout_below="@+id/ambulanceButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="10sp"/>



    <Button
        android:text="call police"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/policeButton"
        android:onClick="callPolice"
        android:layout_below="@+id/showPathButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:height="10sp"/>

    <Button
        android:text="ExtremePanic"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:id="@+id/panicButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:background="@android:color/holo_red_dark"
        android:height="10sp"/>

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/policeButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar" />
</RelativeLayout>
